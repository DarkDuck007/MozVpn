<UserControl x:Class="MozVpnWPF.StatsTableItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MozVpnWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   <Grid>
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="auto"/>
         <ColumnDefinition Width="auto"/>
      </Grid.ColumnDefinitions>
      <Label x:FieldModifier="public" x:Name="Name" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Empty" Margin="4"/>
      <Label x:FieldModifier="public" x:Name="Value" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Empty" Margin="4"/>
   </Grid>
</UserControl>
